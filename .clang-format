---
Standard: Cpp11
UseTab: Never
IndentWidth: 4
Language: Cpp

AlignConsecutiveAssignments: true
AlignConsecutiveDeclarations: true

ColumnLimit: 0

BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: true
  AfterControlStatement: true
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterObjCDeclaration: true
  AfterStruct: true
  AfterUnion: true
  AfterExternBlock: true
  BeforeCatch: true
  BeforeElse: true
  SplitEmptyFunction: false